<div class="row">
  <div class="col-md-6">
    <h1>Add New Metric</h1>
    <form method="POST" role="form">
      <div class="form-group">
        <input class="form-control floating-label" name="name" type="text" placeholder="Name" required>
      </div>
      <div id="expression-form-group" class="form-group">
        <textarea id="expression-input" class="form-control floating-label" name="expression" placeholder="Expression" rows="10"></textarea>
        <span id="expression-feedback" class="help-block"></span>
      </div>
      <input id="submitButton" type="submit" class="btn btn-primary" value="Create">
    </form>
  </div>
   <div class="col-md-6">
    <h1>Event Viewer</h1>
    <select name="" id="">
      {{#each events}}
      <option value="name"></option>
      {{/each}}
    </select>
  </div>
</div>