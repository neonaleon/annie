<div class="row">
  <div class="col-md-6" id="metric-form">
    <h1>Add New Metric</h1>
    <form method="POST" role="form">
      <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" name="name" type="text" placeholder="Name" required>
      </div>
      <div id="expression-form-group" class="form-group">
        <label for="expression-input">Expression</label>
        <textarea id="expression-input" class="form-control" name="expression" placeholder="e.g. event('bought gacha').count()" rows="10"></textarea>
        <span id="expression-feedback" class="help-block"></span>
      </div>
      <input id="submitButton" type="submit" class="btn btn-primary" value="Create">
    </form>
  </div>
  <div class="col-md-6">
    <h1>Event Viewer</h1>
    <p>List of events with random data that your application tracks.</p>
    <input id="event-filter" type="text" class="form-control col-lg-8" placeholder="Filter by event">

    {{#if events}}
    <div id="event-list">
    {{#each events}}
      <div id="{{event}}">
  <pre><code class="language-javascript">{
  event: "{{event}}"

  timestamp: Date

  data: {
    {{#each data}}
    {{@key}}: "{{this}}"
    {{/each}}
  }
  }</code></pre>
      </div>
    {{/each}}
    {{else}}
    <div class="alert">
      <p>You have not tracked any events yet.</p>
      <p>See <a href="developer">Developer</a> for how to get started tracking data.</p>
    </div>
    {{/if}}
    </div>
  </div>
</div>